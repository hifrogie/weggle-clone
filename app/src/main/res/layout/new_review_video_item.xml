<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/new_groupbuy_thumbnail"
        android:background="@color/grey"
        android:layout_width="180dp"
        android:layout_height="250dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_groupbuy_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="bottom">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/new_groupbuy_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/kakaologo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/new_groupbuy_nickname"/>

        <TextView
            android:id="@+id/new_groupbuy_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/new_groupbuy_heart"/>
        <ImageView
            android:id="@+id/new_groupbuy_heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_favorite_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/new_groupbuy_heart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toEndOf="@id/new_groupbuy_heart"
            app:layout_constraintTop_toTopOf="@id/new_groupbuy_heart"/>
        <ImageView
            android:id="@+id/new_groupbuy_chat_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_chat_24"
            app:layout_constraintStart_toEndOf="@id/new_groupbuy_heart_number"
            app:layout_constraintTop_toTopOf="@id/new_groupbuy_heart_number"/>

        <TextView
            android:id="@+id/new_groupbuy_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="0"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toEndOf="@id/new_groupbuy_chat_image"
            app:layout_constraintTop_toTopOf="@id/new_groupbuy_chat_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/new_groupbuy_title"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:text="text"/>
</LinearLayout>